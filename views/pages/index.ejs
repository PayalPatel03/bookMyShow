<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>bookMyTicket - Admin Panel</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap 5 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

  <!-- Custom CSS -->
  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background: #f8f9fa;
    }
    .sidebar {
      height: 100vh;
      background: #1e1e2f;
      color: #fff;
      position: fixed;
      width: 250px;
      top: 0;
      left: 0;
      padding-top: 20px;
    }
    .sidebar .nav-link {
      color: #bbb;
      font-weight: 500;
    }
    .sidebar .nav-link.active, .sidebar .nav-link:hover {
      background: #dc3545;
      color: #fff;
      border-radius: 8px;
    }
    .main-content {
      margin-left: 250px;
      padding: 20px;
    }
    .card-stats {
      border: none;
      border-radius: 15px;
      color: #fff;
    }
    .bg-gradient-red { background: linear-gradient(45deg, #ff4b2b, #ff416c); }
    .bg-gradient-green { background: linear-gradient(45deg, #56ab2f, #a8e063); }
    .bg-gradient-blue { background: linear-gradient(45deg, #36d1dc, #5b86e5); }
    .bg-gradient-orange { background: linear-gradient(45deg, #ff8008, #ffc837); }
    .card h5, .card p { margin: 0; }
  </style>
</head>
<body>

  <!-- Sidebar -->
  <div class="sidebar d-flex flex-column p-3">
    <h3 class="text-center mb-4">ðŸŽ¬ bookMyTicket</h3>
    <ul class="nav flex-column">
      <li><a href="/admin" class="nav-link active"><i class="bi bi-speedometer2 me-2"></i> Dashboard</a></li>
      <li><a href="/addMovie" class="nav-link"><i class="bi bi-film me-2"></i> Add Movie</a></li>
      <li><a href="/list" class="nav-link"><i class="bi bi-list-ul me-2"></i> Movie List</a></li>
      <li><a href="/trailer" class="nav-link"><i class="bi bi-play-circle me-2"></i> Trailers</a></li>
    </ul>
  </div>

  <!-- Main Content -->
  <div class="main-content">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm rounded mb-4">
      <div class="container-fluid">
        <a class="navbar-brand fw-bold text-danger">Admin Panel</a>
        <form class="d-flex ms-auto">
          <input class="form-control me-2" type="search" placeholder="Search">
          <button class="btn btn-danger">Search</button>
        </form>
        <ul class="navbar-nav ms-3">
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle fw-bold" href="#" role="button" data-bs-toggle="dropdown">
              <i class="bi bi-person-circle"></i> Admin
            </a>
            <ul class="dropdown-menu dropdown-menu-end">
              <li><a class="dropdown-item" href="#">Profile</a></li>
              <li><a class="dropdown-item" href="#">Settings</a></li>
              <li><hr class="dropdown-divider"></li>
              <li><a class="dropdown-item text-danger" href="#">Logout</a></li>
            </ul>
          </li>
        </ul>
      </div>
    </nav>

    <!-- Dashboard Stats -->
    <div class="row g-4">
      <div class="col-md-3">
        <div class="card card-stats bg-gradient-red p-3 shadow">
          <h5>Capacity</h5>
          <p class="fs-4">105GB</p>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card card-stats bg-gradient-green p-3 shadow">
          <h5>Revenue</h5>
          <p class="fs-4">$1,345</p>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card card-stats bg-gradient-blue p-3 shadow">
          <h5>Errors</h5>
          <p class="fs-4">23</p>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card card-stats bg-gradient-orange p-3 shadow">
          <h5>Followers</h5>
          <p class="fs-4">+45</p>
        </div>
      </div>
    </div>

    <!-- Charts -->
    <div class="row mt-4">
      <div class="col-md-8">
        <div class="card shadow-sm p-3">
          <h5 class="fw-bold">User Behavior</h5>
          <canvas id="userChart" height="100"></canvas>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card shadow-sm p-3">
          <h5 class="fw-bold">Revenue Sources</h5>
          <canvas id="revenueChart" height="200"></canvas>
        </div>
      </div>
    </div>

  </div>

  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script>
    // User Behavior Chart
    new Chart(document.getElementById('userChart'), {
      type: 'line',
      data: {
        labels: ["00:00","04:00","08:00","12:00","16:00","20:00"],
        datasets: [{
          label: 'Active Users',
          data: [120, 190, 300, 500, 200, 300],
          borderColor: '#dc3545',
          fill: true,
          backgroundColor: 'rgba(220,53,69,0.1)'
        }]
      }
    });

    // Revenue Sources Chart
    new Chart(document.getElementById('revenueChart'), {
      type: 'doughnut',
      data: {
        labels: ["Movies", "Events", "Concerts"],
        datasets: [{
          data: [55, 25, 20],
          backgroundColor: ['#36d1dc','#ff416c','#ffc837']
        }]
      }
    });
  </script>
</body>
</html>
